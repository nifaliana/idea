{% extends 'base.html.twig' %}

{% block title %}Typologie index{% endblock %}

{% block body %}
    <h1>Typologie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for typologie in typologies %}
            <tr>
                <td>{{ typologie.id }}</td>
                <td>{{ typologie.name }}</td>
                <td>
                    <a href="{{ path('typologie_show', {'id': typologie.id}) }}">show</a>
                    <a href="{{ path('typologie_edit', {'id': typologie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('typologie_new') }}">Create new</a>
{% endblock %}
